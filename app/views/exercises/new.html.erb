<h3>Add a New Exercise</h3>

<%= form_with model: @exercise do |form| %>
  <%= form.label :activity %>
  <%= form.text_field :activity %>
  <br />
  <%= form.label :description %>
  <%= form.text_field :description %>
  <br />
  <%= form.submit 'Add exercise' %>
<% end %>

<%= link_to 'Back to Home', root_path %>
